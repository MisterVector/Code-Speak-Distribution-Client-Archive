<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="637.0" prefWidth="722.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.codespeak.distribution.client.scenes.MainSceneController">
   <children>
      <AnchorPane prefHeight="580.0" prefWidth="722.0">
         <children>
            <MenuBar prefHeight="25.0" prefWidth="711.0">
              <menus>
                <Menu mnemonicParsing="false" text="File">
                  <items>
                    <MenuItem mnemonicParsing="false" onAction="#onQuitMenuItemClick" text="Quit" />
                  </items>
                </Menu>
                  <Menu mnemonicParsing="false" text="Program">
                    <items>
                      <MenuItem mnemonicParsing="false" onAction="#onViewHelpMenuItemClick" text="View Help" />
                        <MenuItem mnemonicParsing="false" onAction="#onProgramViewChangelogButtonClick" text="View Changelog" />
                        <MenuItem mnemonicParsing="false" onAction="#onViewDependenciesMenuItemClick" text="View Dependencies" />
                        <SeparatorMenuItem mnemonicParsing="false" />
                        <MenuItem mnemonicParsing="false" onAction="#onOpenFolderMenuItemClick" text="Open Folder" />
                        <MenuItem mnemonicParsing="false" onAction="#onProgramRepairButtonClick" text="Repair" />
                        <MenuItem mnemonicParsing="false" onAction="#onUninstallMenuItemClick" text="Uninstall" />
                    </items>
                  </Menu>
                <Menu mnemonicParsing="false" text="Help">
                  <items>
                    <MenuItem mnemonicParsing="false" onAction="#onAboutMenuItemClick" text="About" />
                        <MenuItem mnemonicParsing="false" onAction="#onViewChangelogButtonClick" text="View Changelog" />
                  </items>
                </Menu>
              </menus>
            </MenuBar>
            <TableView fx:id="programsTable" layoutX="14.0" layoutY="71.0" onKeyReleased="#onProgramsTableKeyReleased" onMousePressed="#onProgramSelect" prefHeight="283.0" prefWidth="695.0">
              <columns>
                <TableColumn fx:id="programsTableNameColumn" prefWidth="315.0" text="Name" />
                <TableColumn fx:id="programsTableVersionColumn" prefWidth="153.0" text="Version" />
                  <TableColumn fx:id="programsTableReleaseTimeColumn" prefWidth="224.0" text="Release Time" />
              </columns>
            </TableView>
            <Label layoutX="14.0" layoutY="36.0" text="Select Category">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
            <AnchorPane layoutX="14.0" layoutY="362.0" prefHeight="316.0" prefWidth="695.0">
               <children>
                  <Label fx:id="programNameLabel" alignment="TOP_CENTER" layoutX="14.0" layoutY="14.0" prefHeight="17.0" prefWidth="674.0" text="Select A Program" textAlignment="CENTER" wrapText="true">
                     <font>
                        <Font name="System Bold" size="24.0" />
                     </font>
                  </Label>
                  <Label fx:id="programDescriptionLabel" alignment="TOP_LEFT" layoutX="11.0" layoutY="76.0" prefHeight="195.0" prefWidth="674.0" text="No description. Select a program first." wrapText="true">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
                  <Button fx:id="installButton" disable="true" layoutX="132.0" layoutY="277.0" mnemonicParsing="false" onAction="#onInstallButtonClick" prefHeight="25.0" prefWidth="93.0" text="Install" />
                  <Button fx:id="launchProgramButton" disable="true" layoutX="11.0" layoutY="277.0" mnemonicParsing="false" onAction="#onLaunchProgramButtonClick" text="Launch Program" />
                  <Button fx:id="updateButton" disable="true" layoutX="236.0" layoutY="277.0" mnemonicParsing="false" onAction="#onUpdateButtonClick" text="Update" />
                  <Label fx:id="programUpdateLabel" layoutX="309.0" layoutY="280.0" textFill="RED">
                     <font>
                        <Font name="System Bold" size="14.0" />
                     </font>
                  </Label>
               </children>
            </AnchorPane>
            <ComboBox fx:id="categoryChoices" layoutX="124.0" layoutY="36.0" onAction="#onCategorySelect" prefHeight="25.0" prefWidth="237.0" />
         </children>
      </AnchorPane>
   </children>
</AnchorPane>
